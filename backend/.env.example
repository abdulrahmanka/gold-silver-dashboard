# Backend Environment Variables

# Server Configuration
NODE_ENV=production
PORT=3001

# Database Configuration (if using PostgreSQL instead of SQLite)
# DATABASE_URL=postgresql://username:password@host:port/database

# Scraping Configuration
MCX_BASE_URL=https://www.mcxindia.com/
MCX_API_ENDPOINT=https://www.mcxindia.com/backpage.aspx/GetMarketWatch

# Scheduler Configuration
SCRAPE_INTERVAL_MINUTES=1
ENABLE_SCHEDULER=true

# CORS Origins (comma-separated)
ALLOWED_ORIGINS=https://gold-silver-dashboard.netlify.app,https://gold-silver-dashboard.vercel.app

# Logging
LOG_LEVEL=info

# Security
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100